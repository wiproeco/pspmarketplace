<% layout('layout') -%>

<!-- Page Content -->
<div id="page-wrapper" ng-init="load();">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Download here</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
            <!-- /.row -->
