                            <span class="pull-left"><a href="{{doc.url}}" download>Download<a/></span>
                            <span class="pull-right"><a href="{{doc.url}}"><i class="fa fa-download"></i><a/></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>                
        </div>                      
    <!-- /.row -->
    </div>
